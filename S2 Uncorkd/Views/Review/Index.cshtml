@{
    ViewData["Title"] = "Index";
}

<div class="thumbnail">
    <div class="imagecontainer">
        <img src="@Model.WineModel.Image_URL" />
    </div>
    <div class="text-container">
        <h1>@Model.WineModel.Name</h1>
        <h2>@Model.WineryModel.Name</h2>
    </div>
</div>


<div class="commentInput">
   @* <input type="text" placeholder="How was it? Leave a note">*@
    <textarea id="comment" maxlength="255" autofocus="autofocus" placeholder="How was it? leave a note"></textarea>
</div>

<div class="slidecontainer">
    <label for="myRange">Rating</label>
    <p id="sliderValue">Theres something wrong with the slider if you're seeing this</p>

    <input type="range" min="1" max="20" value="10" class="slider" id="myRange">
</div>

<div>
    <label for="tasteTags" onclick="expandFlavors()">Flavor Profile ></label>

    <div id="tasteTags">
        <div>
            <label>
                <input type="checkbox" name="category" value="1"><span>Aromatic</span>
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" name="category" value="2"><span>Balanced</span>
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" name="category" value="3"><span>Bitter</span>
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" name="category" value="4"><span>Bold</span>
            </label>
        </div>
        <div>
            <label>
                <input type="checkbox" name="category" value="5"><span>Buttery</span>
            </label>
        </div>
    </div>
    <p>Selected tags: <span id="selectedTags"></span></p>

</div>

<div>
    <input type="button" value="CHECK-IN" onclick="sendData(@Model.WineModel.Id)">
</div>

<link rel="stylesheet" href="~/css/thumbnailReviewPage.css">
<link rel="stylesheet" href="~/css/commentReviewPage.css">

<script src="~/js/checkInButton.js"></script>
<script src="~/js/flavorCheckBoxes.js"></script>
<script src="~/js/ratingSlider.js"></script>

